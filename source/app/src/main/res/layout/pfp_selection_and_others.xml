<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<LinearLayout
		android:id="@+id/background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#212121"
		android:orientation="vertical"
		android:fitsSystemWindows="true">
		<TextView
			android:id="@+id/sign_up_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="25dp"
			android:layout_marginBottom="30dp"
			android:text="Customize Profile"
			android:textSize="40sp"
			android:textColor="#FFFFFF" />
		<LinearLayout
			android:id="@+id/main_background"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="30dp"
			android:paddingRight="30dp"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/circleimageview1"
				android:layout_width="125dp"
				android:layout_height="150dp"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="15dp"
				android:src="@drawable/default_pfp"
				app:civ_border_width="0dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#00FFFFFF"
				app:civ_border_overlay="true" />
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="20dp"
				android:layout_marginBottom="10dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/username_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="About You (Biography)"
					android:textSize="14sp"
					android:textColor="#BDBDBD"
					android:layout_weight="1" />
				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="54/200"
					android:textSize="14sp"
					android:textColor="#BDBDBD" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/username_linear"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="15dp"
				android:background="#EEEEEE"
				android:orientation="horizontal">
				<EditText
					android:id="@+id/username_edittext"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="15dp"
					android:background="@android:color/transparent"
					android:gravity="left|top"
					android:text="Hey there! I am new to Lively! Enjoying my time here! "
					android:textSize="14sp"
					android:textColor="#424242"
					android:hint="Enter a short bio that best describes you!"
					android:textColorHint="#BDBDBD"
					android:lines="3" />
			</LinearLayout>
			<TextView
				android:id="@+id/email_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:text="Pronoun"
				android:textSize="14sp"
				android:textColor="#BDBDBD" />
			<LinearLayout
				android:id="@+id/email_linear"
				android:layout_width="match_parent"
				android:layout_height="43dp"
				android:layout_marginBottom="15dp"
				android:background="#EEEEEE"
				android:orientation="horizontal">
				<MultiAutoCompleteTextView
					android:id="@+id/multiautocomplete1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="15dp"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:textColor="#000000"
					android:hint="Pronouns"
					android:textColorHint="#BDBDBD" />
			</LinearLayout>
			<TextView
				android:id="@+id/password_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:text="Birthday"
				android:textSize="14sp"
				android:textColor="#BDBDBD" />
			<LinearLayout
				android:id="@+id/password_linear"
				android:layout_width="match_parent"
				android:layout_height="43dp"
				android:layout_marginBottom="15dp"
				android:background="#EEEEEE"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/pass_edittext"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginLeft="15dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:textColor="#424242"
					android:hint="Click to choose!"
					android:textColorHint="#BDBDBD"
					android:singleLine="true"
					android:layout_weight="1" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/sign_up_button"
				android:layout_width="match_parent"
				android:layout_height="43dp"
				android:background="#212121"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/button_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Continue"
					android:textSize="14sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/dot_prog_linear"
				android:layout_width="match_parent"
				android:layout_height="43dp"
				android:background="#212121"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
